<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".FinishRecordActivity">
    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_finish_back"
        android:background="@drawable/back"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_finish_release"
        android:layout_below="@id/btn_finish_back">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:id="@+id/btn_finish_play"
            android:background="@drawable/play"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_finish_release"
        android:id="@+id/sb_finish"
        android:maxHeight="5dp"
        android:minHeight="5dp"
        android:progressDrawable="@drawable/sb_bar"/>
    <LinearLayout
        android:gravity="right"
        android:layout_below="@id/sb_finish"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前进度"
            android:id="@+id/tv_finish_current"
            android:textStyle="bold"
            android:textColor="#bfbfbf"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textStyle="bold"
            android:textColor="#bfbfbf"/>
        <TextView
            android:id="@+id/tv_finish_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总时间"
            android:textStyle="bold"
            android:textColor="#bfbfbf"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_finish_volume"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/volume"
            android:text="音量调节"
            android:textSize="21sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人声"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#bfbfbf"/>
            <SeekBar
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_finish_release"
                android:id="@+id/sb_sound"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:progressDrawable="@drawable/sb_volume"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="伴奏"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#bfbfbf"/>
            <SeekBar
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lin_finish_release"
                android:id="@+id/sb_bgm"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:progressDrawable="@drawable/sb_volume"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_marginBottom="20dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/redo"/>
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重录"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_finish_release"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/release_3"/>
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:layout_marginBottom="20dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/download"/>
            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>